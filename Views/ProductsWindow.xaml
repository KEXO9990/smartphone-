<Window x:Class="MobileShopApp.Views.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Management" Height="700" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="📦 Product Management" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#2c3e50"/>

        <!-- Search and Add Section -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBox x:Name="SearchTextBox" Width="250" Height="30" VerticalContentAlignment="Center" 
                     BorderBrush="#bdc3c7" BorderThickness="1" Padding="5" TextChanged="SearchTextBox_TextChanged"/>
            <Button Content="🔍 Search" Margin="10,0,0,0" Height="30" Width="80" 
                    Background="#3498db" Foreground="White" BorderThickness="0"/>
            <Button Content="📝 Add New Product" Margin="20,0,0,0" Height="30" Width="150" 
                    Click="AddProduct_Click" Background="#27ae60" Foreground="White" BorderThickness="0"/>
            <Button Content="🔄 Refresh" Margin="10,0,0,0" Height="30" Width="80" 
                    Click="Refresh_Click" Background="#f39c12" Foreground="White" BorderThickness="0"/>
        </StackPanel>

        <!-- Products DataGrid -->
        <DataGrid Grid.Row="2" x:Name="ProductsDataGrid" AutoGenerateColumns="False" 
                  CanUserAddRows="False" CanUserDeleteRows="False" 
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  BorderBrush="#ecf0f1" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Brand" Binding="{Binding Brand}" Width="100"/>
                <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="100"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="100"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="80"/>
                <DataGridTextColumn Header="Cost" Binding="{Binding CostPrice, StringFormat=C}" Width="80"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="Serial Number" Binding="{Binding SerialNumber}" Width="120"/>
                <DataGridTextColumn Header="Warranty" Binding="{Binding Warranty}" Width="100"/>
                <DataGridCheckBoxColumn Header="Available" Binding="{Binding IsAvailable}" Width="80"/>
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="✏️" Width="30" Height="25" Margin="2" 
                                        Click="EditProduct_Click" Background="#3498db" Foreground="White" BorderThickness="0"/>
                                <Button Content="🗑️" Width="30" Height="25" Margin="2" 
                                        Click="DeleteProduct_Click" Background="#e74c3c" Foreground="White" BorderThickness="0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Height="25" Background="#ecf0f1">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="CountText" Text="Total Products: 0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
