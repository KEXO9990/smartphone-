<Window x:Class="MobileShopApp.Views.ReceiptPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Receipt Preview" Height="500" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0">
            <TextBlock x:Name="ReceiptTextBlock" FontFamily="Consolas" FontSize="12"/>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Print" Click="Print_Click" Width="80" Height="30" Margin="5"/>
            <Button Content="Close" Click="Close_Click" Width="80" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>