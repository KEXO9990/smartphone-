<Window x:Class="MobileShopApp.Views.SaleDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sale Details" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="SaleIdText" FontSize="16" FontWeight="Bold" Margin="5"/>
            <TextBlock x:Name="SaleDateText" FontSize="14" Margin="5"/>
            <TextBlock x:Name="CustomerNameText" FontSize="14" Margin="5"/>
        </StackPanel>
        
        <DataGrid Grid.Row="1" x:Name="ItemsDataGrid" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="120"/>
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="2" Margin="5">
            <TextBlock x:Name="TotalAmountText" FontSize="18" FontWeight="Bold" HorizontalAlignment="Right" Margin="5"/>
            <Button Content="Print Receipt" Click="PrintReceipt_Click" Width="120" Height="35" HorizontalAlignment="Left" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
